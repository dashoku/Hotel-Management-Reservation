<Window x:Class="WpfAppCourse.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCourse"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select Client:" />
            <ComboBox x:Name="ClientComboBox" Width="200" />

            <TextBlock Text="Booking Dates:" Margin="0,10,0,0" />
            <StackPanel Orientation="Horizontal">
                <DatePicker x:Name="DatePickerStart" Margin="0,5,10,5" />
                <TextBlock Text="to" VerticalAlignment="Center" />
                <DatePicker x:Name="DatePickerEnd" Margin="10,5,0,5" />
            </StackPanel>

            <Button Content="Book" Width="80" Margin="0,20,0,0" Click="BookButton_Click" />
        </StackPanel>
    </Grid>
</Window>







